#!/usr/bin/env php
<?php

use orangins\modules\auth\management\PhabricatorAuthManagementWorkflow;

require_once __DIR__ . '/../scripts/__init_script__.php';

$args = new PhutilArgumentParser($argv);
$args->setTagline(pht('manage authentication'));
$args->setSynopsis(<<<EOSYNOPSIS
**auth** __command__ [__options__]
    Manage Phabricator authentication configuration.

EOSYNOPSIS
);
$args->parseStandardArguments();

$workflows = (new PhutilClassMapQuery())
    ->setAncestorClass(PhabricatorAuthManagementWorkflow::class)
    ->execute();
$workflows[] = new PhutilHelpArgumentWorkflow();
$args->parseWorkflows($workflows);
